#! /bin/bash

bspc query -N -d 1 | xargs -i sh -c 'bspc node -f {} && bspc node -c'
bspc query -N -d 7 | xargs -i sh -c 'bspc node -f {} && bspc node -c'
sleep 1
bspc desktop -f '^1'

bspc rule -a Code:code -o node=@^1:^1:/1
bspc rule -a term:term -o node=@^1:^1:/2/1
bspc rule -a ng:ng -o node=@^1:^1:/2/2/1
bspc rule -a nest:nest -o node=@^1:^1:/2/2/2
bspc rule -a firefox:Navigator -o node=@^2:^1:/1
bspc rule -a firefox:Devtools -o node=@^2:^1:/2

bspc wm -l /home/akaash/.dotfiles/state.json
bspc wm -o
code &
firefox -devtools &
kitty --class term --detach
kitty --class ng --detach
kitty --class nest --detach
